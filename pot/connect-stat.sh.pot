#. type: Plain text
#: abs-guide/connect-stat.sh:5
msgid ""
"#!/bin/bash # connect-stat.sh # Note that this script may need modification "
"#+ to work with a wireless connection."
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:10
#, no-wrap
msgid ""
"PROCNAME=pppd        # ppp daemon\n"
"PROCFILENAME=status  # Where to look.\n"
"NOTCONNECTED=85\n"
"INTERVAL=2           # Update every 2 seconds.\n"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:13
msgid ""
"pidno=$( ps ax | grep -v \"ps ax\" | grep -v grep | grep $PROCNAME | awk '{ "
"print $1 }' )"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:23
msgid ""
"# Finding the process number of 'pppd', the 'ppp daemon'.  # Have to filter "
"out the process lines generated by the search itself.  # # However, as Oleg "
"Philon points out, #+ this could have been considerably simplified by using "
"\"pidof\".  # pidno=$( pidof $PROCNAME )  # # Moral of the story: #+ When a "
"command sequence gets too complex, look for a shortcut."
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:32
#, no-wrap
msgid ""
"if [ -z \"$pidno\" ]   # If no pid, then process is not running.\n"
"then\n"
"  echo \"Not connected.\"\n"
"# exit $NOTCONNECTED\n"
"else\n"
"  echo \"Connected.\"; echo\n"
"fi\n"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:35
#, no-wrap
msgid ""
"while [ true ]       # Endless loop, script can be improved here.\n"
"do\n"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:42
#, no-wrap
msgid ""
"  if [ ! -e \"/proc/$pidno/$PROCFILENAME\" ]\n"
"  # While process running, then \"status\" file exists.\n"
"  then\n"
"    echo \"Disconnected.\"\n"
"#   exit $NOTCONNECTED\n"
"  fi\n"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:45
msgid ""
"netstat -s | grep \"packets received\" # Get some connect statistics.  "
"netstat -s | grep \"packets delivered\""
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:49
#, no-wrap
msgid ""
"  sleep $INTERVAL\n"
"  echo; echo\n"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:51
msgid "done"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:53
msgid "exit 0"
msgstr ""

#. type: Plain text
#: abs-guide/connect-stat.sh:55
msgid "# As it stands, this script must be terminated with a Control-C."
msgstr ""

