#. type: Plain text
#: abs-guide/cvt.sh:48
#, no-wrap
msgid ""
"#!/bin/bash\n"
"# Batch convert into different graphic formats.\n"
"# Assumes imagemagick installed (standard in most Linux distros).\n"
msgstr ""

#. type: Plain text
#: abs-guide/cvt.sh:51
#, no-wrap
msgid ""
"INFMT=png   # Can be tif, jpg, gif, etc.\n"
"OUTFMT=pdf  # Can be tif, jpg, gif, pdf, etc.\n"
msgstr ""

#. type: Plain text
#: abs-guide/cvt.sh:58
#, no-wrap
msgid ""
"for pic in *\"$INFMT\"\n"
"do\n"
"  p2=$(ls \"$pic\" | sed -e s/\\.$INFMT//)\n"
"  # echo $p2\n"
"    convert \"$pic\" $p2.$OUTFMT\n"
"    done\n"
msgstr ""

#. type: Plain text
#: abs-guide/cvt.sh:59
#, no-wrap
msgid "exit $?\n"
msgstr ""
